@model Model.tb_anexo
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/jquery.ui.widget.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery-1.9.1.min.js" type="text/javascript" language="javascript"></script>
<script src="~/Scripts/MultiFile.js" type="text/javascript" language="javascript"></script>
<script src="../../Scripts/jquery-1.9.1.js" type="text/javascript"></script>

@using (Ajax.BeginForm("CreateAnexo", "Projeto", new AjaxOptions { UpdateTargetId = "foda2", HttpMethod = "Post"}, new { enctype = "multipart/form-data" } ))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <div class="control-label col-md-2" style="width: 17%">
                @Html.LabelFor(model => model.titulo, "Nome do Arquivo")
            </div>
            <div class="col-md-3" style="width: 46%">
                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
            </div>

            @*<input type="submit" class="multi" accept="jpg|png|pdf" id="upload" />*@
            <input type="file" name="file" />


        </div>
        <div class="form-group">
            <div class="control-label col-md-2" style="width: 17%">
                @Html.LabelFor(model => model.anotacao, "Observação")
            </div>
            <div class="col-md-3" style="width: 61%">
                @Html.EditorFor(model => model.anotacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.anotacao, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3" style="width: 20%">
                <input value="Incluir" class=" btn btn-block" type="submit" />
            </div>

        </div>
    </fieldset>
}
<div class="form-group" id="foda2">
   
    @{Html.RenderPartial("ListarAnexos");}
</div>

