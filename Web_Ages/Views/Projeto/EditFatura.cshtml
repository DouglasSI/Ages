@model Model.tb_fatura
@{Layout = "~/Views/Shared/_Layout.cshtml";}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.9.1.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.maskMoney.js")"></script>
<div class="small-nav">
    <div>
        <a href="#">
            @Html.ActionLink("Página Inicial", "Index", "Home")
            <span>&gt;</span>
            @Html.ActionLink("Projetos", "Projetos", "Projeto")
            <span>&gt;</span>
            Modificar
        </a>
    </div>
</div>
<div class="form-horizontal col-md-12 " style="background-color:rgb(255, 255, 255)">
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <div class="form-horizontal col-md-12 ">
            @using (Html.BeginForm())
            {
                <div class="msg msg-ok">
                    <p><strong>Voçê realmente deseja modificar esta Fatura?</strong></p>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id);
                @Html.HiddenFor(model => model.id_usuario);
                @Html.HiddenFor(model => model.id_orcamento);
                @Html.HiddenFor(model => model.data_pagamento);
                @Html.HiddenFor(model => model.autorizado);
                @Html.HiddenFor(model => model.encerrado);
                @Html.HiddenFor(model => model.is_aditivo);                      
                @Html.HiddenFor(model => model.data_autorizacao);
                @Html.HiddenFor(model => model.data_cadastro);
                @Html.HiddenFor(model => model.valor_pendente);
                
                
                <div class="form-group">
                    <div class="control-label col-md-2" style="width: 17%">
                        @Html.LabelFor(model => model.titulo, "Título")
                    </div>
                    <div class="col-md-3" style="width: 46%">
                        @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control", @maxlength = 100 } })
                        @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                    </div>
                    <div class="control-label col-md-2" style="width: 15%">
                        @Html.LabelFor(model => model.id_forma_pagamento, "Pagamento")
                    </div>
                    <div class="col-md-3" style="width: 20%">

                        @Html.DropDownList("id_forma_pagamento", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.id_forma_pagamento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2" style="width: 17%">
                        @Html.LabelFor(model => model.banco, "Banco")
                    </div>
                    <div class="col-md-3" style="width: 20%">
                        @Html.EditorFor(model => model.banco, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
                        @Html.ValidationMessageFor(model => model.banco, "", new { @class = "text-danger" })
                    </div>
                    <div class="control-label col-md-2" style="width: 10%">
                        @Html.LabelFor(model => model.agencia, "Agência")
                    </div>
                    <div class="col-md-3" style="width: 16%">
                        @Html.EditorFor(model => model.agencia, new { htmlAttributes = new { @class = "form-control", @maxlength = 10 } })
                        @Html.ValidationMessageFor(model => model.agencia, "", new { @class = "text-danger" })
                    </div>
                    <div class="control-label col-md-2" style="width: 15%">
                        @Html.LabelFor(model => model.valor_inicial, "Valor")
                    </div>
                    <div class="col-md-3" style="width: 20%">
                        @Html.EditorFor(model => model.valor_inicial, new { htmlAttributes = new { @class = "form-control", @min = "0", @id = "valor_inicial" } })
                        <script type="text/javascript">$("#valor_inicial").maskMoney();</script>
                        @Html.ValidationMessageFor(model => model.valor_inicial, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2" style="width: 17%">
                        @Html.LabelFor(model => model.conta, "Conta")
                    </div>
                    <div class="col-md-3" style="width: 16%">
                        @Html.EditorFor(model => model.conta, new { htmlAttributes = new { @class = "form-control", @maxlength = 20 } })
                        @Html.ValidationMessageFor(model => model.conta, "", new { @class = "text-danger" })
                    </div>

                    <div class="control-label col-md-2" style="width: 30%">
                        @Html.LabelFor(model => model.data_prevista, "Vencimento")
                    </div>
                    <div class="col-md-3" style="width: 35%">
                        @Html.EditorFor(model => model.data_prevista, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.data_prevista, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-2" style="width: 17%">
                        @Html.LabelFor(model => model.anotacao, "Observação")
                    </div>
                    <div class="col-md-3" style="width: 61%">
                        @Html.EditorFor(model => model.anotacao, new { htmlAttributes = new { @class = "form-control", @maxlength = 1000 } })
                        @Html.ValidationMessageFor(model => model.anotacao, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Confirmar alteração" class="btn btn-block" />
                        </div>
                    </div>
                </div>
            }
            
            <hr />
        </div>
    }
</div>
<div class="form-horizontal col-md-12">.</div>