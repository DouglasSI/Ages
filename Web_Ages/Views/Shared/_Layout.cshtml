<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Sistema Ages</title>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    @Styles.Render("~/Content/bootstrap-3.3.6-dist/css")
    @Scripts.Render("~/Content/bootstrap-3.3.6-dist/js/modernizr")

    <link rel="stylesheet" href="~/Content/bootstrap-3.3.6-dist/css/bootstrap.css" type="text/css" media="all" />
    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.9.1.min.js"></script>
</head>
<body>
    <div id="header">
        <div class="shell">
            <!-- Logo + Top Nav -->
            <div id="top">
                <h1><a href="#">UniAges</a></h1>
                <div id="top-navigation">
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                    <a href="#">
                        @Html.ActionLink("Bem vindo, " + @HttpContext.Current.User.Identity.Name, "Login", "Account")
                    </a>
                    }
                    else
                    {
                    <a href="#">
                        @Html.ActionLink("Login", "Login", "Account")
                    </a>
                    }
                    <span>|</span>
                    <a href="#">
                        @Html.ActionLink("Sair", "LogOut", "Home")
                    </a>
                </div>
            </div>

            @if (HttpContext.Current.User.Identity.IsAuthenticated)
            {
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="text-decoration:none">Controle Interno<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="~/Usuario/Index">Usuário</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="~/Mantenedora/Index">Mantenedora</a></li>
                                        <li><a href="~/Campi/Index">Campi</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="~/Empresa/Index">Empresa</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="~/FormaPagamento/Index">Formas de Pagamento</a></li>
                                        <li><a href="~/Servico/Index">Serviços para Orçamentos</a></li>
                                    </ul>
                                </li>
                                <li><a class="navbar-brand" href="~/Projeto/Listar">Propostas</a></li>
                                <li><a class="navbar-brand" href="~/Projeto/Projetos">Projetos</a></li>
                                <li><a class="navbar-brand" href="~/Projeto/Listar">Anexos</a></li>
                                <li><a class="navbar-brand" href="~/Projeto/Listar">Relatórios</a></li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
            }

            <!-- End Main Nav -->
        </div>
    </div>
    <div class="container body-content">
        <div id="container">
            <div class="shell">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="footer" class="navbar-fixed-bottom">
        <div class="shell">
            <span class="left">&copy; Universidade Ages - Endereço</span>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Content/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/bootstrap-3.3.6-dist/js/bootstrap.js"></script>


</body>
</html>
