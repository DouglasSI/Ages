@model Model.tb_anexo

@using (Ajax.BeginForm("CreateAnexo", "Anexo", new AjaxOptions { UpdateTargetId = "foda2", HttpMethod = "Post" }))
{
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="control-label col-md-2" style="width: 17%">
            @Html.LabelFor(model => model.anotacao, "Observação")
        </div>
        <div class="col-md-3" style="width: 61%">
            @Html.EditorFor(model => model.anotacao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.anotacao, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3" style="width: 20%">
            <input value="Incluir" class=" btn btn-block" type="submit" id="button" />
        </div>
    </div>
}
<div class="form-group" id="foda2">
    @Html.Partial("ListarAnexos")
</div>
