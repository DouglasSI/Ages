@model Model.tb_orcamento

@{Layout = "~/Views/Shared/_Layout.cshtml";}

<div class="small-nav">
    <div>
        <a href="#">
            @Html.ActionLink("Página Inicial", "Index", "Home")
            <span>&gt;</span>
            @Html.ActionLink("Lista de Orcamentos", "EnviarParaDetailsProjeto", new { id = Model.id_projeto })
            <span>&gt;</span>
            Ver
        </a>
    </div>
</div>
<div class="form-horizontal col-md-12 " style="background-color:rgb(255, 255, 255)">
    @if (HttpContext.Current.User.Identity.IsAuthenticated && User.IsInRole("Infra"))
    {
        <div class="msg msg-error">
            <p><strong>Excluir este Orçamento!</strong></p>
        </div>
        <hr />
        <div class="dl-horizontal">
            <div class="form-group">

                <div class="control-label col-md-2">
                    @Html.LabelFor(model => model.tb_projeto.titulo, "Proposta :")
                </div>
                <div class="col-md-5">
                    @Html.Label(Model.tb_projeto.titulo, new { @class = "form-control" })
                </div>
                <div class="control-label col-md-1">
                    @Html.LabelFor(model => model.anotacao, "Anotação :")
                </div>
                <div class="col-md-4">
                    @Html.Label(Model.anotacao, new { @class = "form-control" })
                </div>
                <div class="control-label col-md-2">
                    @Html.LabelFor(model => model.tb_usuario.nome, "Criado por")
                </div>
                <div class="col-md-4">
                    @Html.Label(Model.tb_usuario.nome, new { @class = "form-control" })
                </div>

                <div class="control-label col-md-4">
                    @Html.LabelFor(model => model.valor, "Valor Estimado :")
                </div>
                <div class="col-md-2">
                    @Html.Label(Model.valor.ToString("0.00"), new { @class = "form-control" })
                </div>

                <div class="control-label col-md-2">
                    @Html.LabelFor(model => model.tb_projeto.tb_campi.tb_mantenedora.nome_fantasia, "Mantenedora :")
                </div>
                <div class="col-md-4">
                    @Html.Label(Model.tb_projeto.tb_campi.tb_mantenedora.nome_fantasia, new { @class = "form-control" })
                </div>
                <div class="control-label col-md-2">
                    @Html.LabelFor(model => model.tb_projeto.tb_campi.nome_fantasia, "Campi :")
                </div>
                <div class="col-md-4">
                    @Html.Label(Model.tb_projeto.tb_campi.nome_fantasia, new { @class = "form-control" })
                </div>

            </div>
        </div>
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Excluir este orçamento" class="btn btn-default" />

            </div>
        }
    }
</div>

