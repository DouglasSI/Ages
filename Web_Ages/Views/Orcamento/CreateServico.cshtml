@model  Model.tb_orcamento_servico


@using (Ajax.BeginForm("CreateServico", "Orcamento", new AjaxOptions { UpdateTargetId = "foda", HttpMethod = "Post" }))
{
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <div class="form-group">
       
        <div class="control-label col-md-2" style="width: 45%">
            @Html.LabelFor(model => model.tb_servico.titulo, "Servico")
        </div>
        <div class="col-md-3" style="width: 50%">
            @Html.DropDownList("id_servico", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.tb_servico.titulo, "", new { @class = "text-danger" })

        </div>


    </div>
    <div class="form-group">
        <div class="control-label col-md-2" style="width: 45%">
            @Html.LabelFor(model => model.valor, "Valor")
        </div>
        <div class="col-md-3" style="width: 50%">
            @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        <div class="control-label col-md-2" style="width: 45%">
            @Html.LabelFor(model => model.anotacao, "Observação")
        </div>
        <div class="col-md-3" style="width:50%">
            @Html.EditorFor(model => model.anotacao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.anotacao, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-3" style="width: 45%"></div>
            <div class="col-md-3" style="width: 50%">
                <input value="Incluir" class=" btn btn-block" type="submit" id="button" />
            </div>
        </div>

}
<div class="form-group" id="foda">
    @Html.Partial("ListaServicosOrcamento")
</div>
